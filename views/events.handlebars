<!DOCTYPE html>

<div class="header">

    <h1>Events</h1>

    <div class="input-group add-on" id="search_div">
        <input class="form-control" placeholder="Search" name="search" id="search" type="text">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</div>
<table class="table" style="visibility:visible" id="mytable">
    <thead>
        <tr>
            <th scope="col">Event</th>
            <th scope="col">Location</th>
            <th scope="col">Time</th>
            <th scope="col">About</th>
            <th scope="col">Going</th>
            <th scope="col">Cost</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    {{#if events}}
        <tbody class="table_body">
            {{#each events}}
                {{#if this.name}}
                <tr>
                    <th>{{this.name}} </th>
                    <th>{{this.location}}</th>
                    <th>{{this.time}}</th>
                    <th>{{this.notes}}</th>
                    <th>{{this.attendees}}</th>
                    <th>${{this.cost}}</th>
                    {{#if this.pictures}}<th><a href="{{this.pictures}}"><img src="{{this.pictures}}" style="width:200px;height:150px"/> </a></th> {{/if}}
                </tr>
                {{/if}}
            {{/each}}

        </tbody>
</table>
{{/if}}
